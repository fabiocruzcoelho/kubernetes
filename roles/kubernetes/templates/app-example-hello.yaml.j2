---
apiVersion: v1
kind: Namespace
metadata:
  name: testing
  labels:
    app: kubed
---
apiVersion: v1
kind: Service
metadata:
  name: hello-kubernetes-first
  namespace: testing
spec:
  type: ClusterIP
  ports:
  - port: 80
    targetPort: 8080
  selector:
    app: hello-kubernetes-first
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: hello-kubernetes-first
  namespace: testing
spec:
  replicas: 2
  selector:
    matchLabels:
      app: hello-kubernetes-first
  template:
    metadata:
      labels:
        app: hello-kubernetes-first
    spec:
      containers:
      - name: hello-kubernetes
        image: paulbouwer/hello-kubernetes:1.7
        ports:
        - containerPort: 8080
        env:
        - name: MESSAGE
          value: Hello from the first deployment!
---
apiVersion: v1
kind: Service
metadata:
  name: hello-kubernetes-second
  namespace: testing
spec:
  type: ClusterIP
  ports:
  - port: 80
    targetPort: 8080
  selector:
    app: hello-kubernetes-second
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: hello-kubernetes-second
  namespace: testing
spec:
  replicas: 2
  selector:
    matchLabels:
      app: hello-kubernetes-second
  template:
    metadata:
      labels:
        app: hello-kubernetes-second
    spec:
      containers:
      - name: hello-kubernetes
        image: paulbouwer/hello-kubernetes:1.7
        ports:
        - containerPort: 8080
        env:
        - name: MESSAGE
          value: Hello from the second deployment!
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: hello-kubernetes-ingress
  namespace: testing
  annotations:
    cert-manager.io/cluster-issuer: letsencrypt-production
    certmanager.k8s.io/acme-challenge-type: dns01
    ingress.kubernetes.io/force-ssl-redirect: "true"
    kubernetes.io/tls-acme: "true"
spec:
  tls:
  - secretName: "{{ kubernetes_cert_manager_issuer_prd }}"
    hosts:
      - "*.{{ domain }}"
      - "{{ domain }}"
      - hw1.{{ domain }}
      - hw2.{{ domain }}
  rules:
  - host: "hw1.{{ domain }}"
    http:
      paths:
      - backend:
          serviceName: hello-kubernetes-first
          servicePort: 80
  - host: "hw2.{{ domain }}"
    http:
      paths:
      - backend:
          serviceName: hello-kubernetes-second
          servicePort: 80
---